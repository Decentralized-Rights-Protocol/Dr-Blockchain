[flake8]
max-line-length = 127
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    build,
    dist,
    *.egg-info,
    .coverage,
    .tox,
    .mypy_cache,
    .DS_Store,
    src/networking/drp_pb2.py,
    src/networking/drp_pb2_grpc.py
per-file-ignores =
    __init__.py:F401,F403,F405
    tests/*:S101
    src/networking/*:E111,E114,E128,E225,E303