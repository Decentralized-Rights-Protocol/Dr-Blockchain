# DRP Storage Layer Configuration

# Ledger Layer (RocksDB) Configuration
DRP_LEDGER_DB_PATH=./drp_ledger_db
DRP_LEDGER_MAX_OPEN_FILES=300000
DRP_LEDGER_WRITE_BUFFER_SIZE=67108864
DRP_LEDGER_MAX_WRITE_BUFFER_NUMBER=3
DRP_LEDGER_TARGET_FILE_SIZE_BASE=67108864
DRP_LEDGER_MAX_BYTES_FOR_LEVEL_BASE=268435456
DRP_LEDGER_LEVEL0_FILE_NUM_COMPACTION_TRIGGER=2
DRP_LEDGER_LEVEL0_SLOWDOWN_WRITES_TRIGGER=2
DRP_LEDGER_LEVEL0_STOP_WRITES_TRIGGER=2
DRP_LEDGER_NUM_LEVELS=4
DRP_LEDGER_MAX_BACKGROUND_COMPACTIONS=2
DRP_LEDGER_MAX_BACKGROUND_FLUSHES=1
DRP_LEDGER_DISABLE_AUTO_COMPACTIONS=false

# Indexer Layer (Neo4j) Configuration
DRP_NEO4J_URI=bolt://localhost:7687
DRP_NEO4J_USERNAME=neo4j
DRP_NEO4J_PASSWORD=drp_password
DRP_NEO4J_DATABASE=neo4j
DRP_NEO4J_MAX_CONNECTION_LIFETIME=3600
DRP_NEO4J_MAX_CONNECTION_POOL_SIZE=50
DRP_NEO4J_CONNECTION_ACQUISITION_TIMEOUT=60
DRP_NEO4J_ENCRYPTED=false

# Proof Storage (OrbitDB/IPFS) Configuration
DRP_IPFS_HOST=localhost
DRP_IPFS_PORT=5001
DRP_IPFS_PROTOCOL=http
DRP_ORBITDB_PATH=./orbitdb
DRP_IOT_LOGS_DB_NAME=drp-iot-logs
DRP_PROOF_SUBMISSIONS_DB_NAME=drp-proof-submissions
DRP_IPFS_MAX_FILE_SIZE=104857600
DRP_IPFS_TIMEOUT=30
DRP_IPFS_RETRY_ATTEMPTS=3

# Explorer API Configuration
DRP_EXPLORER_API_HOST=0.0.0.0
DRP_EXPLORER_API_PORT=8000
DRP_EXPLORER_API_RELOAD=true
DRP_EXPLORER_API_LOG_LEVEL=info
DRP_EXPLORER_API_CORS_ORIGINS=*
DRP_EXPLORER_API_MAX_REQUEST_SIZE=10485760
DRP_EXPLORER_API_REQUEST_TIMEOUT=30

# General Configuration
DRP_LOG_LEVEL=INFO
DRP_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
DRP_DATA_DIR=./drp_data
DRP_BACKUP_ENABLED=true
DRP_BACKUP_INTERVAL=3600
DRP_BACKUP_RETENTION_DAYS=30

# Docker Compose Overrides (when using docker-compose.storage.yml)
# Uncomment and modify these when running with Docker Compose
# DRP_NEO4J_URI=bolt://neo4j:7687
# DRP_IPFS_HOST=ipfs
# DRP_IPFS_PORT=5001
