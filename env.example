# DRP Decentralized Storage Environment Configuration

# ScyllaDB Configuration
SCYLLA_HOSTS=localhost:9042,localhost:9043,localhost:9044
SCYLLA_KEYSPACE=drp_proofs
SCYLLA_REPLICATION_FACTOR=3

# IPFS Configuration
IPFS_URL=http://localhost:5001
IPFS_GATEWAY_URL=http://localhost:8080

# Blockchain Configuration
DRP_RPC_URL=http://localhost:8545
DRP_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
DRP_PRIVATE_KEY=your_private_key_here

# Elder Configuration
ELDER_KEYS_FILE=elder_keys.json
ELDER_QUORUM_THRESHOLD=3
ELDER_TOTAL_COUNT=5

# Security Configuration
MASTER_KEY_FILE=master_key.key
CONSENT_PRIVATE_KEY_FILE=consent_key.pem
CONSENT_DB_FILE=consent_tokens.json
TOKEN_EXPIRY_DAYS=365

# Audit and Logging
AUDIT_LOG_DIR=logs
ENABLE_CONSOLE_LOGGING=true
MAX_LOG_SIZE_MB=100
MAX_LOG_FILES=10

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
CORS_ORIGINS=*

# Development Settings
DEBUG=false
LOG_LEVEL=INFO
ENABLE_SWAGGER_UI=true

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3000

# Performance Tuning
MAX_CONCURRENT_REQUESTS=1000
REQUEST_TIMEOUT_SECONDS=30
IPFS_TIMEOUT_SECONDS=60
SCYLLA_TIMEOUT_SECONDS=30

# Security Settings
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
ENABLE_IP_WHITELIST=false
ALLOWED_IPS=127.0.0.1,::1

# Privacy Settings
ENABLE_DATA_ANONYMIZATION=true
ENABLE_CONSENT_TRACKING=true
ENABLE_AUDIT_LOGGING=true
PRIVACY_PRESERVING_HASHING=true

# Backup and Recovery
ENABLE_AUTOMATIC_BACKUPS=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=/app/backups
